<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appwallaz.calc.MainActivity"
    android:weightSum="7"
    android:background="#000000"
    android:stretchColumns="*">
<TextView
    android:id="@+id/disp"
    android:background="#000000"
    android:text="0"
    android:textSize="50dp"
    android:textAlignment="viewEnd"
    android:textColor="@android:color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_weight="2" />

    <TableRow android:layout_width="match_parent"
               android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/bClr"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="50dp"
            android:background="#e5e5e5"/>
        <Button
            android:id="@+id/bPre"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="+/-"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/bPer"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="%"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/bDiv"
            android:layout_margin="2dp"
            android:background="#fba604"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="50dp"/>

    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b7"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/b8"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/b9"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/bMul"
            android:layout_margin="2dp"
            android:background="#fba604"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="55dp"/>

    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b4"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/b5"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/b6"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/bSub"
            android:layout_margin="2dp"
            android:background="#fba604"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="60dp"/>

    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b1"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/b2"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/b3"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/bAdd"
            android:layout_margin="2dp"
            android:background="#fba604"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="55dp"/>

    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b0"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:text="0"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/bDot"
            android:layout_margin="2dp"
            android:background="#e5e5e5"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="55dp"/>
        <Button
            android:id="@+id/bEql"
            android:layout_margin="2dp"
            android:background="#fba604"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="55dp"/>

    </TableRow>

</TableLayout>
